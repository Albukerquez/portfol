    <!-- Page Content -->
    <div class="container post-container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= @post.title %>
                    <small><%= @post.subtitle %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <%= image_tag @post.image, class: 'img-responsive portfolio-link' %>
            </div>

            <div class="col-md-4">
                <h3>Описание проекта: </h3>
                <p><%= @post.body %></p>
                <%= link_to 'На Главную', root_path, class: 'btn btn-primary' %>
            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Примеры работ:</h3>
            </div>

            <% @posts.each do |post| %>
              <div class="col-sm-3 col-xs-6">
                <%= link_to post_path(post) do %>
                  <%= image_tag post.image, class: 'img-responsive portfolio-item' %>
                <% end %>
              </div>
            <% end %>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
